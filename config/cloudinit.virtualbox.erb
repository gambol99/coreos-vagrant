#!/bin/bash
cat <<EOF >/var/lib/coreos-vagrant/vagrantfile-user-data
#cloud-config
#
#   Author: Rohith (gambol99@gmail.com)
#   Date: 2014-10-16 10:24:42 +0100 (Thu, 16 Oct 2014)
#
#  vim:ts=2:sw=2:et
#
hostname: <%=@hostname%>
resolv_conf:
  nameservers: [ 'DNS_SERVICE_IP_ADDRESS_CHANGE_ME' ]
  searchdomains:
    - <%=coreos[:domain]%>
  domain: <%=coreos[:domain]%>
  options:
    rotate: true
    timeout: 1

write_files:
  - path: /etc/hosts
    permissions: 0444
    owner: root
    content: |
      10.0.1.112    hub101 hub
  - path: /etc/coreos.environment
    permissions: 0444
    owner: root
    content: |
      DC: dev
      DEFAULT_ENVIRONMENT=prod
      DEFAULT_APP=unknown
      DEFAULT_NAME=unknown

ssh_authorized_keys:
  <%- coreos[:ssh_authorized_keys].each do |key| -%>
  - <%= key %>
  <%- end -%>

coreos:
  etcd:
    discovery: <%=discovery_token%>
    addr: \$public_ipv4:4001
    peer-addr: \$public_ipv4:7001
  fleet:
    public-ip: \$public_ipv4
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
EOF
